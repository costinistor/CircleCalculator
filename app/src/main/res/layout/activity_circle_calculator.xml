<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.costi.circlecalculator.CircleCalculatorActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_table"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnExit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/exit" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btnRate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/star" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="@string/circle_info"
                android:textColor="#3b3b34" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/cercus" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="Select a method"
                android:textColor="#352356" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinMethod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner" />

                <EditText
                    android:id="@+id/inputValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_type"
                    android:ems="10"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textColor="#3b3b34"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/z_btn_grey"
                    android:text="Save"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/btnClearAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/z_btn_grey"
                    android:text="Clear"
                    android:textColor="@color/colorAccent" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnCalculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/z_btn_grey"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="Calculate"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_spinner"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/outTextCalculation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#3b3b34"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:lineSpacingExtra="7dp" />
                <TextView
                    android:id="@+id/resultCalculation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:textColor="#3b3b34"
                    android:layout_weight="1.3"
                    android:padding="5dp"
                    android:textSize="18dp"
                    android:lineSpacingExtra="7dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="100"
                android:layout_marginBottom="4dp">
                <TextView
                    android:text="@string/LastSaved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingTop="4dp"
                    android:layout_weight="70"
                    android:paddingBottom="4dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#151d25" />

                <Button
                    android:id="@+id/btnClearSaved"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_weight="30"
                    android:background="@drawable/z_btn_grey"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:text="@string/clearSaved"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:background="@drawable/bg_spinner"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/resultSaved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="Side length = 24 cm"
                    android:textColor="#3b3b34"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>
</ScrollView>
